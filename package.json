{
  "name": "client-dashboard",
  "version": "1.0.0",
  "description": "Electron desktop app for Flask client dashboard",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.shivs.clientdashboard",
    "productName": "Client Dashboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "python/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
